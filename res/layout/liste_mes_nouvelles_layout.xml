<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mesNouvellesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Epicerie" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b4e0ff"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" >

        <RelativeLayout
            android:id="@+id/mesNouvellesRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/mesNouvellesListeImage"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/thumbnail_default_small" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mesNouvellesLinearLayout"
            android:layout_width="227dp"
            android:layout_height="47dp"       
            android:orientation="vertical" >
            
            <TextView
	            android:id="@+id/mesNouvellesListeText"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="4dp"
	            android:text="@string/app_name"
	            android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>